                @*<button type="button" class="btn btn-block btn-outline-primary btn-rounded btn-outline mt-4" onclick="Alternar(ConsultaPasaporte)">Buscar</button>*@

            </div>



        </div>

    </form>
    <script>
        $(document).ready(function () {
            $("#boton").click(function (event) {
                event.preventDefault();
                $("#boton").prop('disabled', true)

                return false;
            })
        })
    </script>
