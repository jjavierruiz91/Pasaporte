<hr width=100% align="right" size=200 color="black">

<div class="">

    <form id="FormCitasMedicasDeportiva" name="FormCitasMedicasDeportiva">

        <div class="row m-1">
            <div class="col-xs-6 col-sm-6 col-md-6">
                <label><strong>Oficina de Pasaporte</strong> </label>
                <select style="border: black; border-width: 1px; border-style: solid;" class="select2 form-control" id="TipoIdentificacion" name="TipoIdentificacion">
                    <option value="">Seleccionar</option>
                    <option value="Gobernacion Del Cesar">Gobernacion Del Cesar</option>


                </select>
            </div>
            <div class="col-xs-6 col-sm-6 col-md-6">
                <label><strong>Tipo Solicitud</strong> </label>
                <select style="border: black; border-width: 1px; border-style: solid;" class="select2 form-control" id="TipoIdentificacion" name="TipoIdentificacion">
                    <option value="">Seleccionar</option>
                    <option value="Cedula de Ciudadania">Pasaporte Primera Vez</option>
